<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white">

    <!-- Line 1: Course Name + Section -->
    <TextView
        android:id="@+id/courseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Intro to CS - A1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/courseInstructor"
        android:layout_marginEnd="8dp" />

    <!-- Line 1: Instructor aligned to end -->
    <TextView
        android:id="@+id/courseInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Smith"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/courseName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Register Button below Instructor -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/courseInstructor"
        app:layout_constraintEnd_toEndOf="@id/courseInstructor"
        android:layout_marginTop="4dp" />

    <!-- Line 2: Location full width -->
    <TextView
        android:id="@+id/courseLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Science Hall, Room 203"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/courseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Line 3: Timing full width -->
    <TextView
        android:id="@+id/courseTiming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MWF 10:00â€“11:00"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/courseLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/registerButton"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
